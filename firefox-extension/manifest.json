{
  "manifest_version": 3,
  "name": "Decoy Service",
  "version": "1.0.0",
  "description": "Privacy protection through behavioral obfuscation. Enable/disable decoy browsing activity to confuse advertisers.",

  "browser_specific_settings": {
    "gecko": {
      "id": "decoy-service@nishantj6.github.io",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "tabs",
    "nativeMessaging"
  ],
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  
  "action": {
    "default_title": "Decoy Service",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "48": "icons/icon-48.svg",
      "128": "icons/icon-128.svg"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "options_page": "pages/options.html",
  
  "homepage_url": "https://github.com/Nishantj6/decoy-service"
}
